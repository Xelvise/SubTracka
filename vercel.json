{
    "$schema": "https://openapi.vercel.sh/vercel.json",

    "version": 2,

    "functions": {
        "api/index.ts": {
            "runtime": "@vercel/node",
            "memory": 1024,
            "maxDuration": 30
        }
    },

    "rewrites": [{ "source": "/(.*)", "destination": "/api" }],

    "crons": [
        { "path": "/api/v1/webhooks/ping/upstash-redis", "schedule": "0 12 */10 * *" },
        { "path": "/api/v1/webhooks/ping/supabase", "schedule": "0 12 */5 * *" }
    ]
}
