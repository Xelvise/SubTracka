{
    "compilerOptions": {
        "lib": ["ES2022"],
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "allowJs": true,
        "resolveJsonModule": true,
        "types": ["node", "express"]
    },
    "include": ["api/**/*.ts"],
    "experimental": {
        "topLevelAwait": true
    }
}
