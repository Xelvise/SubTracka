{
    "compilerOptions": {
        "lib": ["ES2022"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "allowJs": true,
        "resolveJsonModule": true,
        "types": ["node", "express"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["*.config.ts"],
    "experimental": {
        "topLevelAwait": true
    }
}
